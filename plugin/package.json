{
  "name": "vite-plugin-dir-builder",
  "version": "1.0.0",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./render/*": {
      "import": "./dist/render/*.js",
      "types": "./dist/render/*.d.ts"
    }
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "tar": "yarn pack",
    "prepublish": "yarn build",
    "prepack": "yarn build"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "glob": "^11.0.1"
  },
  "peerDependencies": {
    "vite": "^5 || ^6 || ^7"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "globals": "^16.0.0",
    "tsup": "^8.4.0",
    "typescript": "~5.7.2",
    "vite": "^5.0.0"
  }
}